        <div class="container">
          <a class="navbar-brand" n:href="Homepage:"><h2>Hudební <em>Festivaly</em></h2></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarResponsive">			
         
          <ul class="navbar-nav ml-auto">

            {if $user->isInRole('admin') || $user->isInRole('organiser') || $user->isInRole('accountant')}
              <li class="nav-item">
                <a class="nav-link" n:href="Management:">Správa</a>
              </li>
            {/if}

            <li class="nav-item">
              <a class="nav-link" n:href="Festival:search">Hledat</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" n:href="Festival:view">Festivaly</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" n:href="Interpret:view">Interpreti</a>
            </li>
      
            <!-- depends on loggedin state -->
            {if $user->loggedIn}
              <li class="nav-item">
                <a class="nav-link" n:href="Account:myreservation">Moje rezervace</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" n:href="Account:detail">Můj účet</a>
              </li>
            {else}
              <li class="nav-item" n:if="!$user->loggedIn">
                <div class="login">
                  <a class="nav-link" n:href="Sign:in">Přihlásit se</a>
                </div>
              </li>
            {/if}

          </ul>
        </div>
      </nav>
